<div class="row">
  <div class="col-md-12">
    <% if @answer.errors.any? %>
      <div class="alert alert-danger">
        <% @answer.errors.full_messages.each do |e| %>
          <p><%= e %></p>
        <% end %>
      </div>
    <% end %>
  </div>
<%= form_for ([@person, @question.donation, @question, @answer]) do |f| %>
  <%= f.label :answer %>
  <%= f.text_area :answer %>
  <%= f.submit %>
<% end %>
</div>
