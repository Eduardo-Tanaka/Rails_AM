<div class="row">
  <div class="col-md-12">
    <% if @answer.errors.any? %>
      <div class="alert alert-danger">
        <% @answer.errors.full_messages.each do |e| %>
          <p><%= e %></p>
        <% end %>
      </div>
    <% end %>
  </div>

<%= form_for ([@person, @question.donation, @question, @answer]) do |f| %>
  <div class="row">
    <div class="form-group col-md-12">
      <%= f.label :answer %>
      <%= f.text_area :answer, rows: 5, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-12">
      <%= f.submit "Save", class: "btn btn-primary form-control" %>
    </div>
  </div>

<% end %>
</div>
