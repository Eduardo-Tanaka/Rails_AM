<div class="row">
  <div class="col-md-12">
    <% if @question.errors.any? %>
      <div class="alert alert-danger">
        <% @question.errors.full_messages.each do |e| %>
          <p><%= e %></p>
        <% end %>
      </div>
    <% end %>
    <%= form_for ([@person, @donation, @question]) do |f| %>
      <div class="form-group">
        <%= f.label :question %>
        <%= f.text_area :question, rows:5, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>
