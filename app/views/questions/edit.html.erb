<div class="col-md-12">
  <% if @question.errors.any? %>
    <div class="alert alert-danger">
      <% @question.errors.full_messages.each do |e| %>
        <p><%= e %></p>
      <% end %>
    </div>
  <% end %>
</div>

<%= form_for ([@person, @donation, @question]) do |f| %>
  <%= f.label :question %>
  <%= f.text_area :question %>
  <%= f.submit %>
<% end %>
